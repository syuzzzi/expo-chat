{
  "expo": {
    "name": "Simple Chat",
    "slug": "rn-chat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3679fe"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.inflearn.simpleChat",
      "buildNumber": "1.0.0",
      "infoPlish": {
        "NSPhotoLibraryUsageDescription": "The app accesses the photo library to upload you profile when you are signing up or updating profile."
      }
    },
    "android": {
      "package": "com.inflearn.simpleChat",
      "versionCode": 1,
      "permissions": ["READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3679fe"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
